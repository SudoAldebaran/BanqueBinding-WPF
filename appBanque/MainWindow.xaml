<Window x:Class="appBanque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:appBanque"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Fichier">
                    <MenuItem Header="_Charger" Click="MenuItem_Click"/>
                    <MenuItem Header="_Sauver" Click="MenuItem_Click_1"/>                 
                    <MenuItem Header="_Quitter" Click="MenuItem_Click_3" />
                </MenuItem>
                <MenuItem Header="_Banque">
                    <MenuItem Header="_Les comptes" Click="MenuItem_Click_2" />                
                    <MenuItem Header="_Filtrer des comptes" Click="MenuItem_Click_4" />
                    <MenuItem Header="_Un compte" Click="MenuItem_Click_5" />
                    <MenuItem Header="_Ajouter un compte" Click="MenuItem_Click_6"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
